<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_penilaian_survei"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.ayyash.recfon.PenilaianSurvei">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:title="Penilaian Survei"
        app:titleTextColor="#fff"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar3" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="Manfaat Mengikuti Survei imi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/textView22" />
                <RadioGroup
                        android:id="@+id/rgManfaat"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">


                    <RadioButton

                        android:text="Tidak Bermanfaat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rgM1"
                        android:layout_weight="1"
                        android:checked="true" />

                    <RadioButton
                        android:text="Cukup Bermanfaat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rgM2" />

                    <RadioButton
                        android:text="Sangat Bermanfaat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rgM3" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="Jumlah Pertanyaan "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>
                <RadioGroup
                    android:id="@+id/rgJumlah"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:text="Terlalu Banyak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rgJ1"
                        android:layout_weight="1"
                        android:checked="true" />

                    <RadioButton
                        android:text="Cukup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rgJ2" />

                    <RadioButton
                        android:text="Terlalu Sedikit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rgJ3" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="Kesesuaian dengan topic transisi obesitas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>
                <RadioGroup
                    android:id="@+id/rgSesuai"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <RadioButton
                        android:text="Tidak Sesuai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rgS1"
                        android:layout_weight="1"
                        android:checked="true" />

                    <RadioButton
                        android:text="Cukup Sesuai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rgS2" />

                    <RadioButton
                        android:text="Sangat Sesuai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rgS3" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="Penilaian Keseluruhan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <RadioGroup
                    android:id="@+id/rgSeluruh"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <RadioButton
                        android:text="Tidak Penting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rgSl1"
                        android:layout_weight="1"
                        android:checked="true" />

                    <RadioButton
                        android:text="Cukup Penting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rgSl2" />

                    <RadioButton
                        android:text="Sangat Penting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rgSl3" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="Jika survey online ini dilanjutkan SECARA ONLINE, Apakah anda bersedia untuk mengikuti  kembali?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                     />
                <RadioGroup
                    android:id="@+id/rgOnline"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:text="Tidak Bersedia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rgO1"
                        android:layout_weight="1"
                        android:checked="true" />

                    <RadioButton
                        android:text="Bersedia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rgO2" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="Jika survey online ini dilanjutkan SECARA LANGSUNG, Apakah anda bersedia?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <RadioGroup
                    android:id="@+id/rgOf"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <RadioButton
                        android:text="Tidak Bersedia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rgOf1"
                        android:layout_weight="1"
                        android:checked="true" />

                    <RadioButton
                        android:text="Bersedia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rgOf2" />

                </RadioGroup>


            </LinearLayout>
            <TextView
                android:text="Kritik/Saran/Masukan/Tanggapan anda terkait survey online ini"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView22r" />
            <EditText
                android:id="@+id/etSaran"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:inputType="textMultiLine" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="#dad8d8"/>

            <Button
                android:theme="@style/PrimaryButton"
                android:text="Kirim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
